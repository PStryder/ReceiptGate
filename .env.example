# ReceiptGate Environment Configuration
# Copy this file to .env and customize for your environment

# ============================================================================
# Service
# ============================================================================
RECEIPTGATE_HOST=0.0.0.0
RECEIPTGATE_PORT=8000
RECEIPTGATE_DEBUG=false
RECEIPTGATE_PUBLIC_URL=http://localhost:8000
RECEIPTGATE_DEFAULT_TENANT_ID=default

# ============================================================================
# Database
# ============================================================================
RECEIPTGATE_DATABASE_URL=sqlite:///./receiptgate.db
RECEIPTGATE_AUTO_MIGRATE_ON_STARTUP=true
RECEIPTGATE_ENABLE_GRAPH_LAYER=true
RECEIPTGATE_ENABLE_SEMANTIC_LAYER=false

# ============================================================================
# Authentication
# ============================================================================
# API key is required unless allow_insecure_dev=true
# RECEIPTGATE_API_KEY=rg_your_key_here
RECEIPTGATE_ALLOW_INSECURE_DEV=false

# ============================================================================
# Limits
# ============================================================================
RECEIPTGATE_RECEIPT_BODY_MAX_BYTES=262144
RECEIPTGATE_RECEIPT_CHAIN_MAX_DEPTH=2048
RECEIPTGATE_SEARCH_DEFAULT_LIMIT=50
RECEIPTGATE_SEARCH_MAX_LIMIT=500
RECEIPTGATE_ENFORCE_CAUSE_EXISTS=false

# ============================================================================
# CORS
# ============================================================================
RECEIPTGATE_CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
RECEIPTGATE_CORS_ALLOW_CREDENTIALS=true
RECEIPTGATE_CORS_ALLOWED_METHODS=GET,POST,OPTIONS
RECEIPTGATE_CORS_ALLOWED_HEADERS=Authorization,Content-Type,X-API-Key

# ============================================================================
# Logging
# ============================================================================
RECEIPTGATE_LOG_RECEIPT_BODIES=false
